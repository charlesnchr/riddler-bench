{
  "version": 2,
  "buildCommand": "cd results-ui && npm ci && npm run build",
  "outputDirectory": "results-ui/build",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/results-ui/server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/results-ui/build/index.html"
    }
  ],
  "functions": {
    "results-ui/server/index.js": {
      "includeFiles": "results/**"
    }
  },
  "env": {
    "RESULTS_DIR": "results",
    "NODE_ENV": "production"
  }
}